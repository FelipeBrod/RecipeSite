@model IEnumerable<RecipeSite.Models.Recipe>
@{
    ViewData["Title"] = "RecipeList";
}

<h2>Recipes List</h2>

<p>
    <a asp-action="AddRecipe" class="btn btn-default">Create New</a>
</p>

<table class="table table-striped table-hover">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kind)
        </th>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kind)

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Review" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>

</table>