@model RecipesListViewModel

<p>
    <a asp-controller="CRUD"asp-action="AddRecipe" class="btn btn-success">Create New</a>
</p>

<table class="table table-striped table-hover">
    <tr class="success">

        <th>
            Name
        </th>
        <th>
            Cuisine
        </th>
        <th>

        </th>


    <tbody>

        @{
            foreach (var item in Model.Recipes)
            {
                <tr>
   
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Cuisine
                    </td>
                    <td>
                        <a asp-controller="Recipes" asp-action="ViewRecipe" asp-route-id="@item.Id" class="btn btn-info">Details</a>                      
                    </td>
                </tr>


            }

        }

    </tbody>


</table>

<div page-model="@Model.PagingInfo" page-action="RecipeList"></div>

